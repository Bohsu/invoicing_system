<strong class="text-info">客户信息管理</strong> 
<div class="page-header">
  <%= link_to "添加新客户", new_mytp_customer_path, :class => "btn btn-primary btn-small" %>
</div>

<table class="common table-bordered table-striped table-hover">   
  <thead>
    <tr>
      <th>序号</th>
      <th>公司名称</th>
      <th>联系人 </th>
      <th>手机</th>
      <th>电话</th>
      <th>邮箱</th>
      <th>操作</th>
    </tr>  
  </thead>
  <tbody>  
    <% @customers.each_with_index do |customer, index| %>
      <tr>
        <td class="tc"><%= index + 1  %></td>
        <td><%= link_to customer.name, "" %></td>
        <td><%= customer.contact %></td>
        <td class="tc"><%= customer.mobile %></td>
        <td><%= customer.tel %></td>
        <td><%= customer.email %></td>        
        <td>
           <% edit_link = link_to "修改", edit_mytp_customer_path(customer, :back => request.fullpath) %>
           <% destroy_link = link_to '删除', mytp_customer_path(customer, :back => request.fullpath), :method => 'delete', :confirm => "你确定删除吗?" %>
           <%= operate_buttons([edit_link, destroy_link].compact) %> 
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>
<%= paginate @customers %>
