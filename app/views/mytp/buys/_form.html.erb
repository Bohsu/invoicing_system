<table class="common table-bordered ">
  <tbody>
  <tr> 
      <th class='bg'>进货单编号：</th> 
      <td><%= f.text_field :code, :readonly => "readonly" %></td>
    </tr> 
    <tr> 
      <th class='bg'><%= require_span %>供应商：</th> 
      <td>
        <%= f.hidden_field :supplier_id %>
        <%= text_field_tag :supplier_name, @buy.supplier ? @buy.supplier.name : '', :readonly => "readonly" %>
      </td> 
    </tr> 
    <tr> 
      <th class='bg'>单据类型：</th> 
      <td><%= f.select :category, [['进货', '进货'], ['退货 ', '退货 ']] %></td> 
    </tr> 
    <tr>
       <th class='bg'>备注：<br/>（100字以内）</th>
       <td colspan="3"><%= f.text_area :remark, cols: 50, rows: 6, class: 'w500 h50' %></td>
    </tr> 
  </tbody>
</table> 

<div class='form-actions mt10'> 
  <%= f.submit '提交', :class=>'btn btn-small btn-primary', :id => "buy_form_submit" %>
  <%= link_to '取消',  mytp_buys_path, :class=>'btn btn-small btn-default' %>
</div> 

