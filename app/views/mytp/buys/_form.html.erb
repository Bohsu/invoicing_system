<table class="common table-bordered pt20">
  <tbody>
  <tr> 
      <th class='bg'>商品编号：</th> 
      <td><%= f.text_field :code  %></td>
    </tr> 
    <tr> 
      <th class='bg'>供应商：</th> 
      <td><%= f.text_field :supplier_id, :readonly => "readonly" %><span class="ml10"><%= link_to "请点击选择供应商", ""%></span></td> 
    </tr> 
    <tr> 
      <th class='bg'>单据类型：</th> 
      <td><%= f.select :type, [['进货', '进货'], ['退货 ', '退货 ']] %></td> 
    </tr> 
    <tr>
       <th class='bg'>备注：<br/>（100字以内）</th>
       <td colspan="3"><%= f.text_area :remark, cols: 50, rows: 6, class: 'w500 h50' %></td>
    </tr> 
  </tbody>
</table> 

<div class='mt10'> 
  <%= f.submit '提交', :class=>'btn  btn-primary' %>
  <%= link_to '取消',  mytp_buys_path, :class=>'btn btn-small btn-default' %>
</div> 
