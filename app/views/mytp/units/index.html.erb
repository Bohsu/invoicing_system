<strong class="text-info">计量单位管理</strong> 
<div class="page-header">
  <%= link_to "添加计量单位", new_mytp_unit_path, :class => "btn btn-primary btn-small" %>
</div>

<table class="common table-bordered table-striped table-hover">   
  <thead>
    <tr>
      <th>序号</th>
      <th>计量单位名称</th>
      <th>操作</th>
    </tr>  
  </thead>
  <tbody>  
    <% @units.each_with_index do |unit, index| %>
      <tr>
        <td class="tc"><%= index + 1  %></td>
        <td><%= unit.name %></td>
        <td>
           <% edit_link = link_to "修改", edit_mytp_unit_path(unit, :back => request.fullpath) %>
           <% destroy_link = link_to '删除', mytp_unit_path(unit, :back => request.fullpath), :method => 'delete', :confirm => "你确定删除吗?" %>
           <%= operate_buttons([edit_link, destroy_link].compact) %> 
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>
<%= paginate @units %>
