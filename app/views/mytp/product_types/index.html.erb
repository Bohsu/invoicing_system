<strong class="text-info">商品类别管理</strong> 
<div class="page-header">
  <%= link_to "添加商品类别", new_mytp_product_type_path, :class => "btn btn-primary btn-small" %>
</div>

<table class="common table-bordered table-striped table-hover">   
  <thead>
    <tr>
      <th>序号</th>
      <th>商品类别名称</th>
      <th>操作</th>
    </tr>  
  </thead>
  <tbody>  
    <% @product_types.each_with_index do |product_type, index| %>
      <tr>
        <td class="tc"><%= index + 1  %></td>
        <td><%= product_type.name %></td>
        <td>
           <% edit_link = link_to "修改", edit_mytp_product_type_path(product_type, :back => request.fullpath) %>
           <% destroy_link = link_to '删除', mytp_product_type_path(product_type, :back => request.fullpath), :method => 'delete', :confirm => "你确定删除吗?" %>
           <%= operate_buttons([edit_link, destroy_link].compact) %> 
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>
<%= paginate @product_types %>
