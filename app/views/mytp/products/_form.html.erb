<table class="common table-bordered pt20">
  <tbody>
  <tr> 
      <th class='bg'>商品名称：</th> 
      <td> <%= f.text_field :name  %></td> 
      <th class='bg'>商品编号：</th> 
      <td>暂时空着</td>
    </tr> 
    <tr> 
      <th class='bg'>型号：</th> 
      <td><%= f.text_field :model  %></td>
      <th class='bg'>商品类别：</th> 
      <td><%= f.select :product_type_id, ProductType.get_product_types  %></td> 
    </tr> 
    <tr> 
      <th class='bg'>当前数量：</th> 
      <td><%= f.text_field :quantity  %></td> 
      <th class='bg'>计量单位：</th> 
      <td><%= f.select :unit, Unit.get_units %></td> 
    </tr> 
    <tr>
      <th class='bg'>采购价格：</th> 
      <td><%= f.text_field :buy_price, :class => 'tr' %><span class="ml5">元</span></td> 
      <th class='bg'>采购总价：</th> 
      <td><%= f.text_field :buy_total_price, :readonly => "readonly", :class => 'tr' %><span class="ml5">元</span></td> 
    </tr> 
    <tr>
       <th class='bg'>销售价格：</th> 
       <td><%= f.text_field :sell_price, :class => 'tr' %><span class="ml5">元</span></td>
       <th class='bg'>销售总价：</th> 
       <td><%= f.text_field :sell_total_price, :readonly => "readonly", :class => 'tr' %><span class="ml5">元</span></td>
    </tr> 
    <tr>
       <th class='bg'>备注：<br/>（100字以内）</th>
       <td colspan="3"><%= f.text_area :remark, cols: 50, rows: 6, class: 'w500 h50' %></td>
    </tr> 
  </tbody>
</table> 

<div class='form-actions mt10'> 
  <%= f.submit '提交', :class=>'btn  btn-primary' %>
  <%= link_to '取消',  mytp_products_path, :class=>'btn btn-small btn-default' %>
</div> 
