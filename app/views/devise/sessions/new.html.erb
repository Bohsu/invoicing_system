<div class="admin_login_wrap ">
    <h1>
      后台管理
    </h1>
    <div></div>
    <div class="adming_login_border">
        <div class="admin_input">
             <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :validate => true) do |f| %>
             <%= render 'shared/flash_msg' %>
                <ul class="admin_items">
                    <li>
                        <label for="user">用户名：</label>
                        <%= f.text_field :login, :autofocus => true, :placeholder => "用户名", :size => "40", :class=>"admin_input_style" %>
                    </li>
                    <li>
                        <label for="pwd">密 码：</label>
                        <%= f.password_field :password, :size => "40", :class => "admin_input_style" %>
                    </li>
                    <li>
                        <%= f.submit "登 录", :class=>'btn btn-primary' %>
                    </li>
                </ul>
              <% end %>
        </div>
    </div>
    <p class="admin_copyright"><%= link_to "许邦伟业", new_user_registration_path, :class => "ta_r"%> &copy; 2014 Powered by <a href="http://bohsu.github.com" target="_blank">bohsu</a></p>
</div>